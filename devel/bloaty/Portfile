# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem          1.0
PortGroup           cmake   1.1
PortGroup           github  1.0
PortGroup           legacysupport 1.1

# strnlen
legacysupport.newest_darwin_requires_legacy 10

# Commit-based until next release, since old release
# fails to build against current versions of re2 etc.
# https://github.com/google/bloaty/issues/380
github.setup        google bloaty 34f4a66559ad4938c1e629e9b5f54630b2b4d7b0
version             1.1
revision            1

description         A size profiler for binaries

long_description    Ever wondered what's making your binary big? Bloaty will show you a size \
                    profile of the binary so you can understand what's taking up space inside.

categories          devel
license             Apache-2
maintainers         nomaintainer

fetch.type          git

post-fetch {
    system -W ${worksrcpath} "git submodule update --init"
}

depends_build-append \
                    path:bin/pkg-config:pkgconfig
depends_lib-append  port:capstone \
                    port:protobuf3-cpp \
                    port:re2 \
                    port:zlib

compiler.cxx_standard   2017

configure.args-append \
                    -DBLOATY_ENABLE_RE2=ON \
                    -DBLOATY_PREFER_SYSTEM_CAPSTONE=ON \
                    -DBUILD_TESTING=OFF
