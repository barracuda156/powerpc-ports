# Standard build options for White Star
export CC="/opt/local/bin/gcc-mp-14 -UXP_MACOSX -flax-vector-conversions -Wno-error=incompatible-pointer-types -Wno-error=int-conversion -Wno-error=implicit-int -mtune=G5 -maltivec -m32 -read_only_relocs suppress -force_cpusubtype_ALL -mdynamic-no-pic"
export CXX="/opt/local/bin/g++-mp-14 -UXP_MACOSX -D_GLIBCXX_USE_CXX11_ABI=0 -flax-vector-conversions -Wno-error=incompatible-pointer-types -Wno-error=int-conversion -Wno-error=implicit-int -fpermissive -mtune=G5 -maltivec -m32 -read_only_relocs suppress -force_cpusubtype_ALL -mdynamic-no-pic"

# --param ggc-min-expand=10

export PKG_CONFIG_PATH=/opt/local/lib/pkgconfig/

export LDFLAGS="-latomic"

mk_add_options MOZ_MAKE_FLAGS="-j4"

ac_add_options --enable-default-toolkit=cairo-gtk3
ac_add_options --disable-npapi

ac_add_options --enable-application=whitestar
ac_add_options --with-branding=whitestar/branding/whitestar

ac_add_options --enable-optimize=-O0

ac_add_options --with-nspr-prefix=/opt/local
ac_add_options --with-nss-prefix=/opt/local
ac_add_options --with-system-bz2
ac_add_options --with-system-jpeg
ac_add_options --with-system-zlib
ac_add_options --enable-system-cairo
ac_add_options --enable-system-hunspell
ac_add_options --enable-system-pixman

ac_add_options --disable-strip
ac_add_options --disable-install-strip
ac_add_options --disable-devtools
ac_add_options --disable-crashreporter
ac_add_options --disable-necko-wifi
ac_add_options --disable-updater
ac_add_options --disable-apple-media
ac_add_options --disable-gio
ac_add_options --disable-webrtc
ac_add_options --disable-gamepad
ac_add_options --disable-safe-browsing
ac_add_options --disable-accessibility

ac_add_options --disable-tests
ac_add_options --disable-debug

ac_add_options --enable-macos-target=10.5
ac_add_options --with-macos-sdk=/Developer/SDKs/MacOSX10.5.sdk
ac_add_options --host=powerpc-apple-darwin
ac_add_options --target=powerpc-apple-darwin
